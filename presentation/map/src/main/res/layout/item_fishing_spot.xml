<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_itemFishingSpot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="물만난고기"
            android:textAppearance="@style/Typography.Title1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_itemFishingSpot_groundType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="기타"
            android:textAppearance="@style/Typography.Title2"
            app:layout_constraintBottom_toBottomOf="@id/textView_itemFishingSpot_name"
            app:layout_constraintStart_toEndOf="@id/textView_itemFishingSpot_name"
            app:layout_constraintTop_toTopOf="@id/textView_itemFishingSpot_name" />

        <ImageView
            android:id="@+id/imageView_itemFishingSpot_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_marker"
            android:backgroundTint="@color/gray_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_itemFishingSpot_name" />

        <TextView
            android:id="@+id/textView_itemFishingSpot_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경상북도 구미시 인의동 365-2"
            app:layout_constraintBottom_toBottomOf="@id/imageView_itemFishingSpot_location"
            app:layout_constraintStart_toEndOf="@id/imageView_itemFishingSpot_location"
            app:layout_constraintTop_toTopOf="@id/imageView_itemFishingSpot_location" />

        <TextView
            android:id="@+id/textView_itemFishingSpot_roadAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="경상북도 구미시 인동중앙로 42"
            app:layout_constraintStart_toStartOf="@id/textView_itemFishingSpot_address"
            app:layout_constraintTop_toBottomOf="@id/textView_itemFishingSpot_address" />

        <TextView
            android:id="@+id/textView_itemFishingSpot_mainPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메인포인트"
            app:layout_constraintStart_toStartOf="@id/textView_itemFishingSpot_roadAddress"
            tools:layout_editor_absoluteY="122dp" />

        <TextView
            android:id="@+id/textView_itemFishingSpot_fishType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="메기, 송어"
            app:layout_constraintBottom_toBottomOf="@id/textView_itemFishingSpot_mainPoint"
            app:layout_constraintStart_toEndOf="@id/textView_itemFishingSpot_mainPoint"
            app:layout_constraintTop_toTopOf="@id/textView_itemFishingSpot_mainPoint" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
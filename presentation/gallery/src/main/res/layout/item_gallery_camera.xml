<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="120dp"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/imageView_itemGalleryCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/ic_photo_camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/textView_itemGalleryCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 찍기"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/Typography.SubTitle1"
            app:layout_constraintTop_toBottomOf="@id/imageView_itemGalleryCamera"
            app:layout_constraintStart_toStartOf="@id/imageView_itemGalleryCamera"
            app:layout_constraintEnd_toEndOf="@id/imageView_itemGalleryCamera"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/Typography.Title1</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextColor">@color/gray_300</item>
        <item name="tabSelectedTextColor">@color/gray_600</item>
        <item name="tabIndicatorColor">@color/blue_600</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="tabPaddingEnd">10dp</item>
        <item name="tabMinWidth">100dp</item>
        <item name="tabGravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="tabContentStart">-96dp</item>
    </style>


    <style name="CustomFloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>